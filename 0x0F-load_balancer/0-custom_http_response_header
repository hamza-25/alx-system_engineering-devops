#!/usr/bin/env bash
# configure web-02 and update web-01
sudo apt -y update
sudo apt -y install nginx
ufw allow 'Nginx HTTP'
echo 'Hello World!' > /var/www/html/index.nginx-debian.html
sudo sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.youtube.com/ permanent;' /etc/nginx/sites-available/default
echo "Ceci n'est pas une page" | sudo tee /var/www/html/custome_404.html
f='$'
l='ri'
server="
server {
        listen 80 default_server;
        listen [::]:80 default_server;
        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;
        server_name _;
        location / {
                try_files ${f}r${l} ${f}r${l}/ =404;
                add_header X-Served-By $HOSTNAME;
        }
        location /redirect_me {
                return 301 http://www.youtube.com/;
        }
        error_page 404 /custome_404.html;
        location /404 {
                internal;
        }
}"
echo -e "$server" > /etc/nginx/sites-available/default
sudo systemctl restart nginx
